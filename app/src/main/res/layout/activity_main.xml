<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pixel_google" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profil_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="-28dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/photo_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profil_image"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="50dp"
                    android:text="@string/nama"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profil_image"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="80dp"
                    android:text="@string/nim"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/buttonSimulasinilai"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo1"
                        android:onClick="buttonSimulasinilai"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/simulasi_nilai"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonCuaca"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo2"
                        android:onClick="buttonCuaca"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/cuaca"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/buttonNilai"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo3"
                        android:onClick="buttonNilai"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/nilai"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/buttonProfil"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo4"
                        android:onClick="buttonProfil"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/profil"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!--            baris 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnTelpon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo7" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/ikon1"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnMaps"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo8"
                        android:onClick="buttonIkon2"/>
                    android:background="@drawable/worldwide" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/ikon2"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/buttonSaran"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo5"
                        android:onClick="buttonSaran"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/saran"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/buttonTentang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/logo6"
                        android:onClick="buttonTentang"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/tentang"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>